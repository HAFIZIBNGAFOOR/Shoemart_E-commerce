<body>
    <% if(typeof userData !== "undefined"){ %>
		<%-include('userloged') %>
	<%}else{%>
		<%- include('noUser') %>
	<%}%>
    <section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>ADD NEW ADDRESS HERE</h1>
					<nav class="d-flex align-items-center">
						<a href="#">Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="#">Welcome to Shoemart</a>
					</nav>
				</div>
			</div>
			
		</div>
	</section>

    <div class="container main">


        <div class="profile">
            <div class="container">



                <div class="card mb-4 p-5">
                    <div class="card-header">Account Details</div>
                    <form method="post" action="/checkout-address" >
                            
                            <label class="small mb-1" >HOME / OFFICE</label>
                            <br>
                            <select class="mb-3" name="delivery_point" id="category" >
                                       
                                        <option>HOME</option>
                                        <option>OFFICE</option>
                                       
                                    </select>
                                    <br>
                                    <br>
                                    <br>
                            <!-- Form Group (username)-->
                            <div class="mb-3">
                                <label class="small mb-1 float-left">Full Name</label>
                                <input class="form-control" id="inputUsername" type="text"  name="name" placeholder="Enter your fullname" required >
                            </div>
                            
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (first name)-->
                                <div class="col-md-6">
                                    <label class="small mb-1 float-left"  >Mobile</label>
                                    <input class="form-control"  name="number" id="inputFirstName" type="text" placeholder="Enter your mobile number" required >
                                </div>
                                <!-- Form Group (last name)-->
                                <div class="col-md-6">
                                    <label class="small mb-1 float-left" >State</label>
                                    <input class="form-control" id="inputLastName"name="state" type="text" placeholder="Enter your state" required >
                                </div>
                            </div>
                            <!-- Form Row        -->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (organization name)-->
                                <div class="col-md-6">
                                    <label class="small mb-1 float-left" >Address</label>
                                    <input class="form-control" id="inputOrgName"  name="house" type="text" placeholder="Enter your house  name" required  >
                                </div>
                                <!-- Form Group (location)-->
                                <div class="col-md-6">
                                    <label class="small mb-1 float-left" >City</label>
                                    <input class="form-control" id="inputLocation"name="city" type="text" placeholder="Enter your city" required >
                                </div>
                            </div>
                            <!-- Form Group (email address)-->
                           
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (phone number)-->
                                <div class="col-md-6">
                                    <label class="small mb-1 float-left" >Country</label>
                                    <input class="form-control" name="country" id="inputPhone" type="tel" placeholder="Enter your country" >
                                </div>
                                <!-- Form Group (birthday)-->
                                <div class="col-md-6">
                                    <label class="small mb-1 float-left">ZIP</label>
                                    <input class="form-control" id="inputBirthday" type="text" name="pincode" placeholder="Enter your pincode" required >
                                </div>
                            </div>
